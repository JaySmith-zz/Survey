@using System.Web.Optimization
@using Tyson.Hr.Survey
@using Tyson.Hr.Survey.Core
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - HR Survey</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta http-equiv="Cache-control" content="no-cache">
    <meta http-equiv="Expires" content="-1"/>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    <link href="~/Content/jquery.jgrowl.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("HR Survey", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    Hello, <span class="username">@Globals.CurrentUserFullName</span>
                </section>
                <nav>
                    @Html.MvcSiteMap().Menu()
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Tyson Foods, Inc.</p>
            </div>
        </div>
    </footer>
    <div style="display: none;" id="working-modal" title="Working...">
        Working, please wait... 
    </div>
    <div style="display: none;" id="loading-modal" title="Loading...">
        Loading, please wait...
    </div>
    <div style="display: none;" id="complete-modal" title="Complete...">
        Operation complete!
    </div>
    <div style="display: none;" id="save-modal" title="Save Complete...">
        Answers successfully saved...
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    <script src="~/Scripts/survey.dialog.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.jgrowl.js"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
